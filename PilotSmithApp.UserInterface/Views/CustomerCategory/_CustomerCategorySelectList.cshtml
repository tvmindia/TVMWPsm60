@model PilotSmithApp.UserInterface.Models.CustomerCategoryViewModel
@{
    var SelectListattributes = new object();
    var onclickevent = "";
}
@if (@ViewBag.IsRequired == "required")
{
    SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "CustomerCategory is missing", @onchange = "$('#hdnCustomerCategoryCode').val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "CustomerCategory is missing", @onchange = "$('#hdnCustomerCategoryCode').val(this.value)" };
    //onclickevent = ViewBag.propertydisable ? "" : "AddCustomerCategoryMaster('OTR')";
}
else
{
    SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnCustomerCategoryCode').val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnCustomerCategoryCode').val(this.value)" };
    //onclickevent = ViewBag.propertydisable ? "" : "AddCustomerCategoryMaster('OTR')";
}
@if (@ViewBag.HasAddPermission)
{
    <div class="input-group">
        @Html.DropDownList("CustomerCategoryCode", Model.CustomerCategorySelectList, "--Select CustomerCategory--", SelectListattributes)
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick=@onclickevent><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    @Html.DropDownList("CustomerCategoryCode", Model.CustomerCategorySelectList, "--Select CustomerCategory--", SelectListattributes)
}
@Html.ValidationMessage("CustomerCategoryCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#CustomerCategoryCode').val($('#hdnCustomerCategoryCode').val());
        $('#CustomerCategoryCode').select2({});
        $('.select2').addClass('form-control newinput');
    });
</script>

