    <br />
</div>
@{
    if (!Model.EmailFlag)
    {
        <div>
            <img style="width:100%;height:210px;" src="~/Content/images/LH_Header.jpg" />
        </div>
        <div style="padding:0px 30px 0px 30px;margin-left:51px;">
