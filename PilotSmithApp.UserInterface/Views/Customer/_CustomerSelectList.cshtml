@model PilotSmithApp.UserInterface.Models.CustomerViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("CustomerID", Model.CustomerSelectList, "--Select customer--", new { @class = "form-control newinput", @required = "",@style="width:100%!important", @title = "The Customer is missing", @onchange = "$('#hdnCustomerID').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddCustomerMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    <div class="input-group">
        @Html.DropDownList("CustomerID", Model.CustomerSelectList, "--Select customer--", new { @class = "form-control newinput", @onchange = "$('#hdnCustomerID').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddCustomerMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}

@Html.ValidationMessage("CustomerID", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#CustomerID').val($('#hdnCustomerID').val());
        $('#CustomerID').select2({});
        $('.select2').addClass('form-control newinput');
        $('#CustomerID').change(function () {
            $('#divCustomerBasicInfo').load("Customer/CustomerBasicInfo?ID=" + this.value)
        });
    });
</script>
