@model PilotSmithApp.UserInterface.Models.UnitViewModel
@{
    var SelectListattributes = new object();
}
@if (@ViewBag.IsRequired == "required")
{
    @Html.DropDownList("UnitCode", Model.UnitSelectList, "--Select unit--", new { @class = "form-control newinput", @required = "", @title = "The Unit is missing", @style = "width:100%!important", @onchange = "$('#hdnUnitCode').val(this.value)" })
    //SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "Unit is missing", @onchange = "$('#hdnUnitCode).val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "Unit is missing", @onchange = "$('#hdnUnitCode').val(this.value)" };
}
else
{
    @Html.DropDownList("UnitCode", Model.UnitSelectList, "--Select unit--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnUnitCode').val(this.value)" })
    //SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnUnitCode').val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnUnitCode').val(this.value)" };
}
@Html.ValidationMessage("UnitCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#UnitCode').val($('#hdnUnitCode').val());
        $('#UnitCode').select2({
            dropdownParent: $('.divUnitSelectList')
        });
        $('.select2').addClass('form-control newinput');
    });
</script>
