@model PilotSmithApp.UserInterface.Models.EstimateViewModel
@if (ViewBag.IsRequired == "required")
{
        @Html.DropDownList("EstimateID", Model.EstimateSelectList, "--Select Estimate--", new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "The Estimate is missing", @onchange = "$('#hdnEstimateID').val(this.value)" })      

}
else
{
        @Html.DropDownList("EstimateID", Model.EstimateSelectList, "--Select Estimate--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnEstimateID').val(this.value)" })
   

}
@Html.ValidationMessage("EstimateID", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {

        $('#EstimateID').val($('#hdnEstimateID').val() == "00000000-0000-0000-0000-000000000000" ? null : $('#hdnEstimateID').val());
        $('#EstimateID').select2({});
        $('.select2').addClass('form-control newinput');
    });
</script>
