@model PilotSmithApp.UserInterface.Models.DocumentStatusViewModel
@if (@ViewBag.IsRequired == "required")
{
        @Html.DropDownList("DocumentStatusCode", Model.DocumentStatusSelectList, "--Select document status--", new { @class = "form-control newinput", @required = "", @title = "The Document status is missing", @style = "width:100%!important", @onchange = "$('#hdnDocumentStatusCode').val(this.value)" })
}
else
{
        @Html.DropDownList("DocumentStatusCode", Model.DocumentStatusSelectList, "--Select document status--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnDocumentStatusCode').val(this.value)" })
}

@Html.ValidationMessage("DocumentStatusCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        if ($('#hdnDocumentStatusCode').val())
        {
            $('#DocumentStatusCode').val($('#hdnDocumentStatusCode').val());
        }
        $('#DocumentStatusCode').select2({
            dropdownParent: $('.divDocumentStatusSelectList')
        });
        $('.select2').addClass('form-control newinput');
    });
</script>
