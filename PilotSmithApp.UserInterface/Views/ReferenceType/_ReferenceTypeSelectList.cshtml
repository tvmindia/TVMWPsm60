@model PilotSmithApp.UserInterface.Models.ReferenceTypeViewModel
@if (@ViewBag.IsRequired == "required")
{
    
        @Html.DropDownList("ReferenceTypeCode", Model.ReferenceTypeSelectList, "--Select reference type--", new { @class = "form-control newinput", @required = "", @title = "The Reference type is missing", @style = "width:100%!important", @onchange = "$('#hdnReferenceTypeCode').val(this.value)" })
}
else
{
    
        @Html.DropDownList("ReferenceTypeCode", Model.ReferenceTypeSelectList, "--Select reference type--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnReferenceTypeCode').val(this.value)" })
}

@Html.ValidationMessage("ReferenceTypeCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#ReferenceTypeCode').val($('#hdnReferenceTypeCode').val());
        $('#ReferenceTypeCode').select2({
            dropdownParent: $('.divReferenceTypeSelectList')
        });
        $('.select2').addClass('form-control newinput');
    });
</script>























