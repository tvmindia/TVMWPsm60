<div class="col-md-3">
    <!-- Widget: user widget style 1 -->
    <div class="box box-widget widget-user">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <a href="/Enquiry" class="dash-link-effect">
            <div class="widget-user-header bg-aqua dash-div-effect">
                <h3 class="widget-user-username"><span>Enquiries</span></h3>
                <h5 class="widget-user-desc">(Last 6 months)</h5>
            </div>
        </a>
        <div class="widget-user-image">

            <img class="img-circle" src="~/Content/images/enquiry.png" alt="user">
        </div>
        <div class="box-footer">
            <div class="row">
                <div class="col-sm-6 border-right" title="Total enquiries">
                    <div class="description-block">
                        <h5 class="description-header">@ViewBag.EnquiryTotal</h5>
                        <span class="description-text " onclick="">Total</span>

                    </div>
                    <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-6 border-right" title="Converted enquiries">
                    <div class="description-block">
                        <h5 class="description-header">@ViewBag.ConvertedEnquiry</h5>
                        <span class="description-text " onclick="">Converted</span>
                    </div>
                    <!-- /.description-block -->
                </div>



                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <!-- /.widget-user -->
</div>
