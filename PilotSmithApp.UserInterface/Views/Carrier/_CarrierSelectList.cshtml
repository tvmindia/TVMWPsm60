@model PilotSmithApp.UserInterface.Models.CarrierViewModel
@{
    var SelectListattributes = new object();
    var onclickevent = "";
}
@if (@ViewBag.IsRequired == "required")
{
    SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "Carrier is missing", @onchange = "$('#hdnCarrierCode').val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "Carrier is missing", @onchange = "$('#hdnCarrierCode').val(this.value)" };
    //onclickevent = ViewBag.propertydisable ? "" : "AddCarrierMaster('OTR')";
}
else
{
    SelectListattributes = ViewBag.propertydisable ? (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnCarrierCode').val(this.value)", disabled = "disabled" } : (object)new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnCarrierCode').val(this.value)" };
    //onclickevent = ViewBag.propertydisable ? "" : "AddCarrierMaster('OTR')";
}
@if (@ViewBag.HasAddPermission)
{
    <div class="input-group">
        @Html.DropDownList("CarrierCode", Model.CarrierSelectList, "--Select Carrier--", SelectListattributes)
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick=@onclickevent><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    @Html.DropDownList("CarrierCode", Model.CarrierSelectList, "--Select Carrier--", SelectListattributes)
}

