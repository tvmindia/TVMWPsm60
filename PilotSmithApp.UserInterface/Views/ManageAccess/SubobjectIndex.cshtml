@model ProductionApp.UserInterface.Models.ManageSubObjectAccessViewModel
@using ProductionApp.UserInterface.App_Start
@{
    ViewBag.Title = "Sub objects";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
}

<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-cogs"></i> Settings</a></li>
        <li><a href="@Url.Action("Index", "SAMPanel",new { code = ViewBag.SysModuleCode })"><i class="fa fa-users"></i> User management</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<div class="">
    <div class="" id="sectionManageAccessbtnPatch" style="min-height:25px">

        @{
            var data = new { ActionType = "Default" };
            @Html.Action("ChangeButtonStyle", "ManageAccess", data);
        }
    </div>
</div>
<div class="form-horizontal" id="formDisplay">
    <div class="col-md-12">

        <div class="col-md-4" style="padding-left: 0px;">
            <div class="col-md-12" style="padding-left: 0px;border-bottom: 2px solid gainsboro;">
           
                <div class="form-group col-md-10">
                    <div class="col-md-12">
                        <label class="control-label">Select Object</label>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.AppObjectObj.ID, Model.ObjectList, "--Select Object--", new { @class = "form-control", @id = "ddlObject" })
                        </div>

                        <div class="col-md-1"></div>
                        <div class="col-md-1"></div>
                    </div>

                </div>
            </div>
            <div class="col-md-12" style="padding-left: 0px;border-bottom: 2px solid gainsboro;margin-top:4%;">
          

                <div class="form-group col-md-10">
                    <div class="col-md-12">
                        <label class="control-label">Select Role</label>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.RoleID, Model.RoleList, "--Select Role--", new { @class = "form-control", @id = "ddlRole" })
                        </div>

                        <div class="col-md-1"></div>
                        <div class="col-md-1"></div>
                    </div>

                </div>
            </div>

        </div>

    </div>
    <div class="col-md-12">&nbsp;</div>
    <div id="AppSubObjecttbldiv" class="col-md-12">
        <table id="tblAppSubObjects" class="table table-striped table-bordered table-hover" cellspacing="0" style="width:100%">
            <thead>
                <tr class="text-center">
                    <th>ID</th>
                    <th>Sub-Object</th>
                    <th>Object</th>
                    <th>Application</th>
                    <th>Read</th>
                    <th>Write</th>
                </tr>
            </thead>
        </table>
    </div>

    <div id="backlink" style="display:none;">
        @Html.ActionLink("Back to List", "Index", "ManageAccess", null, new { name = ViewBag.Appid,code=ViewBag.SysModuleCode })
    </div>
</div>



<div>
</div>

@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/ManageSubObjectAccess")
}


