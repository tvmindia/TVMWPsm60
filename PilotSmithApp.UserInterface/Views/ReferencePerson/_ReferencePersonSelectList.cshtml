@model PilotSmithApp.UserInterface.Models.ReferencePersonViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("ReferredByCode", Model.ReferencePersonSelectList, "--Select reference person--", new { @class = "form-control newinput", @required = "", @title = "The Reference person is missing",@style="width:100%!important", @onchange = "$('#hdnReferredByCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    <div class="input-group">
        @Html.DropDownList("ReferredByCode", Model.ReferencePersonSelectList, "--Select reference person--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnReferredByCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}

@Html.ValidationMessage("ReferredByCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#ReferredByCode').val($('#hdnReferredByCode').val());
        $('#ReferredByCode').select2({});
        $('.select2').addClass('form-control newinput');
    });
</script>

