@model PilotSmithApp.UserInterface.Models.ServiceCallViewModel

<div class="col-md-12 no-padding">
    <div class="box-body no-padding">
        @if (Model.SaleInvoiceList.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 24%">Invice No#</th>@* actual width- width reduced for scroll *@
                        <th style="width: 18%;text-align: center;">Date</th>
                        <th style="width: 53%">Products</th>
                    </tr>
                </thead>
            </table>
            <table class="table table-striped" style="display:block;overflow-y:scroll;max-height:70vh;">
                <tbody>
                    @for (int i = 0; i < Model.SaleInvoiceList.Count; i++)
                    {
                        <tr>
                            <td style="width: 25%"><a href="SaleInvoice?id=@Model.SaleInvoiceList[i].ID">@Model.SaleInvoiceList[i].SaleInvNo</a></td>
                            <td style="width: 20%;text-align: center;">@Model.SaleInvoiceList[i].SaleInvDateFormatted</td>
                            <td style="width: 55%">@Html.Raw(Model.SaleInvoiceList[i].ProductDetail)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2 class="col-md-12" style="text-align:center;"><i class="fa fa-minus-circle" aria-hidden="true"></i> No Invoices Yet</h2>
        }
    </div>
    <div class="col-md-12">&nbsp;</div>
</div>

<script>
    $(document).ready(function () {
        try {
            @if(@Model.SaleInvoiceList.Count>0)
            {
                <text>
                    $('#lblTotalInvoices').html('Total Invoices for this customer : <span onclick="GetSaleInvoiceByCustomerID();" style="cursor:pointer;text-decoration:underline;color:skyblue">' + @Model.SaleInvoiceList.Count + '</span>');
                </text>
            }
            else
            {
                <text>
                    $('#lblTotalInvoices').html('Total Invoices for this customer : <span style="text-decoration:underline;">' + @Model.SaleInvoiceList.Count + '</span>');
                </text>
            }
        } catch (ex) {
            console.log(ex);
        }
    })
</script>