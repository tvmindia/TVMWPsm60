@model PilotSmithApp.UserInterface.Models.DocumentStatusViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("DocumentStatusCode", Model.DocumentStatusSelectList, "--Select document status--", new { @class = "form-control newinput", @required = "", @title = "The Document status is missing", @onchange = "$('#hdnDocumentStatusCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    <div class="input-group">
        @Html.DropDownList("DocumentStatusCode", Model.DocumentStatusSelectList, "--Select document status--", new { @class = "form-control newinput", @onchange = "$('#hdnDocumentStatusCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}

@Html.ValidationMessage("DocumentStatusCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#DocumentStatusCode').val($('#hdnDocumentStatusCode').val());
    });
</script>
