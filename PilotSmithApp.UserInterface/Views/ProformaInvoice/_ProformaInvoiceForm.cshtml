                    <div class="form-group col-md-12 no-right-padding">
                        <div class="col-md-6 no-padding">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.InvoiceType, htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class="col-md-12">
