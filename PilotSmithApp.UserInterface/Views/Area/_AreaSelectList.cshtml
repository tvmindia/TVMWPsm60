@model PilotSmithApp.UserInterface.Models.AreaViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("AreaCode", Model.AreaSelectList, "--Select area--", new { @class = "form-control newinput", @required = "", @title = "The State is missing", @onchange = "$('#hdnAreaCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddAreaMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}
else
{
    <div class="input-group">
        @Html.DropDownList("AreaCode", Model.AreaSelectList, "--Select area--", new { @class = "form-control newinput", @onchange = "$('#hdnAreaCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddAreaMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>
}

@Html.ValidationMessage("AreaCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {        
        $('#AreaCode').val($('#hdnAreaCode').val());
    });
</script>