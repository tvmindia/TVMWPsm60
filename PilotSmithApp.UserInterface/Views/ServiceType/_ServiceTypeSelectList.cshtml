@model PilotSmithApp.UserInterface.Models.ServiceTypeViewModel
@if (@ViewBag.IsRequired == "required")
{
    @Html.DropDownList("ServiceTypeCode", Model.ServiceTypeSelectList, "--Select Service Type--", new { @class = "form-control newinput", @required = "", @title = "The Service Type is missing", @style = "width:100%!important", @onchange = "$('#hdnServiceTypeCode').val(this.value)" })
}
else
{
    @Html.DropDownList("ServiceTypeCode", Model.ServiceTypeSelectList, "--Select Service Type--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnServiceTypeCode').val(this.value)" })
}

@Html.ValidationMessage("ServiceTypeCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        if ($('#hdnServiceTypeCode').val())
        {
            $('#ServiceTypeCode').val($('#hdnServiceTypeCode').val());
        }
        $('#ServiceTypeCode').select2({
            dropdownParent: $('.divServiceTypeSelectList')
        });
        $('.select2').addClass('form-control newinput');
    });
</script>

