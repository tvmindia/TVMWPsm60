@model PilotSmithApp.UserInterface.Models.BranchViewModel
    @if (@ViewBag.IsRequired == "required")
    {
            @Html.DropDownList("BranchCode", Model.BranchList, "--Select branch--", new { @class = "form-control newinput", @required="" , @title = "The Branch is missing", @onchange = "$('#hdnBranchCode').val(this.value)" })
            
    }
    else
    {
            @Html.DropDownList("BranchCode", Model.BranchList, "--Select branch--", new { @class = "form-control newinput", @onchange = "$('#hdnBranchCode').val(this.value)" })
           
    }

@Html.ValidationMessage("BranchCode", "", new { @class = "text-danger" })
<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#BranchCode");
        $('#BranchCode').val($('#hdnBranchCode').val());
    });
</script>