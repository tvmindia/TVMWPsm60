@model PilotSmithApp.UserInterface.Models.EnquiryFollowupViewModel
<style>
    .pagination {
        margin: 5px 0px;
    }

    .todo-list > li {
        background: #ffffff;
        border-left: none;
    }

    .box-footer {
        background-color: transparent;
    }
