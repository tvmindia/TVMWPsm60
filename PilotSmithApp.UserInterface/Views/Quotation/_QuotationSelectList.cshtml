@model PilotSmithApp.UserInterface.Models.QuotationViewModel
@if (ViewBag.IsRequired == "required")
{
    @Html.DropDownList("QuotationID", Model.QuotationSelectList, "--Select Quotation--", new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "The Quotation is missing", @onchange = "$('#hdnQuotationID').val(this.value)" })

}
else
{
    @Html.DropDownList("QuotationID", Model.QuotationSelectList, "--Select Quotation--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnQuotationID').val(this.value)" })


}
@Html.ValidationMessage("QuotationID", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {

        $('#QuotationID').val($('#hdnQuotationID').val() == "00000000-0000-0000-0000-000000000000" ? null : $('#hdnQuotationID').val());
        $('#QuotationID').select2({});
        $('.select2').addClass('form-control newinput');
    });
</script>

