<script>
                $(document).ready(function () {
                    try {
                        $.validator.unobtrusive.parse("#SaleInvoiceForm");
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                    try {
                        $('input.datepicker').datepicker({
                            format: "dd-M-yyyy",
                            maxViewMode: 0,
                            todayBtn: "linked",
                            clearBtn: true,
                            autoclose: true,
                            todayHighlight: true
                        });
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                    try {
                        //Fileupload
                        $('#btnUpload').click(function () {
                            debugger;
                            //Pass the controller name
                            var FileObject = new Object;
                            if ($('#hdnFileDupID').val() != "00000000-0000-0000-0000-000000000000") {
                                FileObject.ParentID = (($('#SaleInvoiceForm #ID').val()) != "00000000-0000-0000-0000-000000000000" ? ($('#SaleInvoiceForm #ID').val()) : $('#hdnFileDupID').val());
                            }
                            else {
                                FileObject.ParentID = ($('#SaleInvoiceForm #ID').val() == "00000000-0000-0000-0000-000000000000") ? "" : $('#SaleInvoiceForm #ID').val();
                            }


                            FileObject.ParentType = "SaleInvoice";
                            FileObject.Controller = "FileUpload";
                            UploadFile(FileObject);
                        });
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                    try {
                        $('#QuoteID').val($('#hdnQuoteID').val() == "00000000-0000-0000-0000-000000000000" ? null : $('#hdnQuoteID').val());
                        $('#QuoteID').select2({
                            language: {
                                noResults: function (params) {
                                    return "Search result will shows here";
                                }
                            },
                            ajax: {
                                type: 'POST',
                                dataType: 'json',
                                url: "Quotation/GetQuotationSelectListOnDemand/",
                                delay: 250,
                                data: function (term) {
                                    return {
                                        'searchTerm': term.term //search term
                                    };
                                },
                                processResults: function (data) {
                                    return {
                                        results: data.items
                                    };
                                },
                            }
                        });
                        $('#SaleOrderID').val($('#hdnSaleOrderID').val() == "00000000-0000-0000-0000-000000000000" ? null : $('#hdnSaleOrderID').val());
                        $('#SaleOrderID').select2({
                            language: {
                                noResults: function (params) {
                                    return "Search result will shows here";
                                }
                            },
                            ajax: {
                                type: 'POST',
                                dataType: 'json',
                                url: "SaleOrder/GetSaleOrderSelectListOnDemand/",
                                delay: 250,
                                data: function (term) {
                                    return {
                                        'searchTerm': term.term //search term
                                    };
                                },
                                processResults: function (data) {
                                    return {
                                        results: data.items
                                    };
                                },
                            }
                        });
                        $('.select2').addClass('form-control newinput');
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                    try {
                        $('#SaleInvoiceForm #EstimateID').change(function () {
                            OnServerCallBegin();
                            $("#divSaleInvoiceForm").load("SaleInvoice/SaleInvoiceForm?id=" + _emptyGuid + "&estimateID=" + this.value, function () {
                                $('#divCustomerBasicInfo').load("Customer/CustomerBasicInfo?ID=" + $('#SaleInvoiceForm #hdnCustomerID').val());
                                BindSaleInvoiceDetailList("00000000-0000-0000-0000-000000000000", true);
                                OnServerCallComplete();
                            });
                        });
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                    try {
                        $('[name="DocumentType"]').change(function () {
                            if (this.value == "Quotation") {
                                $('#divSaleOrderSelectList').hide();
                                $('#divQuotationSelectList').show();
                                $('#QuoteID').prop('disabled', false);
                                $('#SaleOrderID').prop('disabled', true);
                            }
                            else if (this.value == "SaleOrder") {
                                $('#divSaleOrderSelectList').show();
                                $('#divQuotationSelectList').hide();
                                $('#QuoteID').prop('disabled', true);
                                $('#SaleOrderID').prop('disabled', false);
                            }
                        });
                    }
                    catch (e) {
                        console.log(e.message);
                    }
                });
</script>

