@model PilotSmithApp.UserInterface.Models.UnitViewModel
@if (ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("UnitCode", Model.UnitSelectList, "--Select unit--", new { @class = "form-control newinput", @required = "", @style = "width:100%!important", @title = "The Unit is missing", @onchange = "$('#hdnUnitCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddUnitMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>

}
else
{
    <div class="input-group">
        @Html.DropDownList("UnitCode", Model.UnitSelectList, "--Select unit--", new { @class = "form-control newinput", @style = "width:100%!important", @onchange = "$('#hdnUnitCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddUnitMaster('OTR')"><i class="fa fa-plus-square"></i></span>
    </div>

}
@Html.ValidationMessage("UnitCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $('#UnitCode').val($('#hdnUnitCode').val());
        $('#UnitCode').select2({});
        $('.select2').addClass('form-control newinput');
    });
</script>
