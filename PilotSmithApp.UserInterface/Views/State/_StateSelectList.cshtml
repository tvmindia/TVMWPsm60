@model PilotSmithApp.UserInterface.Models.StateViewModel
@if (@ViewBag.IsRequired == "required")
{
    <div class="input-group">
        @Html.DropDownList("StateCode", Model.StateSelectList, "--Select state--", new { @class = "form-control newinput", @required = "", @title = "The State is missing", @onchange = "$('#hdnStateCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="far fa-plus-square"></i></span>
    </div>
}
else
{
    <div class="input-group">
        @Html.DropDownList("StateCode", Model.StateSelectList, "--Select state--", new { @class = "form-control newinput", @onchange = "$('#hdnStateCode').val(this.value)" })
        <span class="input-group-addon" style="cursor:pointer;color:#4bd24b;box-shadow:0px 1px 3px 0px #4bd24b" onclick="AddStateMaster('OTR')"><i class="far fa-plus-square"></i></span>
    </div>
}

@Html.ValidationMessage("StateCode", "", new { @class = "text-danger" })

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#StateCode");
        $('#StateCode').val($('#hdnStateCode').val());
    });
</script>